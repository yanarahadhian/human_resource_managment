<span class="input">
  <label>Kategori Kejadian <span class="redstar">*</span></label>:
  <%= f.select :accident_category, @accident.options[:category].collect{|p| [p.humanize,p]} %>
</span>
<span class="clear"></span>

<span class="input">
  <%= hidden_field_tag "hidden_ajax_accident_location_path", @locations, :id => 'hidden_ajax_accident_location_path' %>
  <label>Lokasi Kejadian <span class="redstar">*</span></label><span class="left">:&nbsp;</span>
  <%= f.text_field :accident_location, :id => 'autocomplete_accident_location_name', :autocomplete => 'off' %>
  <div style="margin-left:162px"><%= error_message_on @accident, :accident_location %></div>
</span>
<span class="clear"></span>

<span class="input">
  <label>Tanggal Kejadian</label>:
  <%= f.text_field :accident_date, :id => "ui-date", :class => "ui-date" %>
</span>
<span class="clear"></span>

<span class="input">
  <label>Penyebab<span class="redstar"></span></label>:
   <%= f.text_field :causes %>
</span>
<span class="clear"></span>

<span class="input">
  <label>Deskripsi Kejadian</label>:
  <%= f.text_area :accident_description, :cols => 20, :rows => 3 %>
</span>
<span class="clear"></span>

<span class="input">
  <label>Penanggung Jawab</label>:
  <%= f.text_field :accident_person_in_charge, :autocomplete => 'off' %>
</span>
<span class="clear"></span>

<span class="input">
  <label>Tindakan<span class="redstar">*</span></label><span class="left">:&nbsp;</span>
  <%= f.text_area :action_taken, :cols => 20, :rows => 3 %>
  <div style="margin-left:162px"><%= error_message_on @accident, :action_taken %></div>
</span>
<span class="clear"></span>