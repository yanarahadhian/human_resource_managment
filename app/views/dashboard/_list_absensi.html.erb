<div id="main-content" style="border-left:0px">
<div class="contentTable">
<% if !values.blank? %>
  <div id="app_two_con" class="input-data app_two_con">
    <table id="tb1">
	    <thead>
		    <tr>
          <th width="5%" class="center-text">No.</th>
          <th>NIK</th>
          <th width="23%" class="center-text">
            <a href="javascript:void(0)" onClick="<%= sortablecol("full_name",sortby,direction,"absensi") %>" id="firstnameColumn">
              Nama
              <span class="icons sorter_ico">&nbsp;</span>
            </a>
          </th>
          <th>Departemen</th>
          <th>Bagian</th>
          <th>Tanggal Tidak Hadir</th>
          <th>Alasan Tidak Hadir</th>
        </tr>
	    </thead>
	    <tbody>
        <% values.each_with_index do |c,i| %>
          <tr class="<%= i%2 == 0 ? "" : "alt"%>">
            <td><%= (25*(pagenum.to_i - 1))+i+1 %></td>
            <td class="left-text"><%= c.employee_id %></td>
            <td class="left-text"><%= c.full_name %></td>
            <td class="left-text"><%= c.department_name %></td>
            <td class="left-text"><%= c.division_name %></td>
            <td class="left-text"><%= c.date %></td>
            <td class="left-text"><%= AbsenceType.find(c.absence_type_id).absence_type_name if c.absence_type_id %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="control-box"></div>
    <div no-chart="">
      <div id="desc_role" class="no-data-chart">Belum ada data
    </div>
  </div>
<% end %>
</div></div>
<%= hidden_field_tag "page_num_absensi",pagenum %>
<%= hidden_field_tag "sort_absensi",sortby %>
<%= hidden_field_tag "direction_absensi",direction %>
<script type="text/javascript">
  $(document).ready(function(){
    var h = $('#tb1').height();
    var p = h/2-5;
    var h2 = h +2
    $('.bar-show-chart').css({paddingTop: p, paddingBottom: p});
    $('.chart-block-table').css({height: h2});
  });
</script>
