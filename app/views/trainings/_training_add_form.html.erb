<% input_mulai = "input-field" %>
<% err_mulai = error_message_on @training, :training_start %>
<% input_mulai = "input-error" unless err_mulai.blank? %>

<% input_selesai = "input-field" %>
<% err_selesai = error_message_on @training, :training_end %>
<% input_selesai = "input-error" unless err_selesai.blank? %>

<% input_person_trained_in = "input-field" %>
<% err_person_trained_in = error_message_on @training, :person_trained_in %>
<% input_person_trained_in = "input-error" unless err_person_trained_in.blank? %>

<div class="input">
  <span class="input-field">
    <label>Jenis Pelatihan</label>:
    <%= f.select :training_type, @training.options[:type].collect{|p| [p.humanize,p]}, { :include_blank => 'Pilih' } %>
  </span>
  <span class="clear"></span>

  <span class="<%= input_person_trained_in %>" id="internal">
    <label>Pelatih <span class="redstar">*</span></label><span class="left">:&nbsp;</span>
    <%= f.text_field :person_trained_in %>
    <div class="clear"></div>
    <%= err_person_trained_in %>
  </span>
  <span class="clear"></span>

  <div id="external">
    <span class="input-field">
      <label>Penyelenggara</label>:
      <%= f.text_field :promoter %>
    </span>
    <span class="clear"></span>

    <span class="input-field">
      <label>No. Telp</label>:
      <%= f.text_field :promoter_phone %>
    </span>
  </div>

  <span class="clear"></span>
    <span class="input-field">
    <label>Tema</label>:
    <%= f.text_field :theme %>
  </span>

  <span class="clear"></span>
    <span class="input-field">
    <label>No Sertifikat</label>:
    <%= f.text_field :certificate_number %>
    </span>
  <span class="clear"></span>

  <span class="<%= input_mulai %>">
    <label>Tanggal Mulai <span class="redstar">*</span></label><span class="left">:&nbsp;</span>
    <%= f.text_field :training_start, :class => "ui-date" %>
    <div class="clear"></div>
    <%= err_mulai %>
  </span>
  <span class="clear"></span>

  <span class="<%= input_selesai %>">
    <label>Tanggal Selesai <span class="redstar">*</span></label><span class="left">:&nbsp;</span>
    <%= f.text_field :training_end, :class => "ui-date" %>
    <div class="clear"></div>
    <%= err_selesai %>
  </span>
  <span class="clear"></span>

  <span class="input-field">
    <label>Keterangan </label><span class="left">:&nbsp;</span>
    <%= f.text_area :training_description, :rows => 3, :cols => 20 %>
    <div class="clear"></div>
  </span>
  <span class="clear"></span>
</div>