
<script type="text/javascript">
  function ErrorMessage(text){
    ShowNotifyMessage(text);
  }

  function SuccessMessage(text){
    ShowNotifyMessage(text);
    $.address.value('payrolls');
  }
  
 function deletePremiums(vals){
    $('#table_premium').load("/premium_table?premium_id="+ $(vals).val() +"&del=1");
     $.colorbox.close();
  }

  function ShowNotifyMessage(text){
    $(".notify_error").slideDown("fast").html('<span class="message">'+ text +'</span><a class="icons close-error-icon right" onclick="CloseNotify()";return false;">&nbsp;</a>');
  }
  $(document).ready(function(){
    $('#cboxClose').click(function(){
      $('.loading').hide();

    });

    $(".grey_button").click(function(){
      $.colorbox.close();
    })
  });

  function closePopUp(){
    $.colorbox.close()
    $('.loading').hide();
  }
</script>

