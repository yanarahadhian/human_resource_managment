<!-- Tooltips for Department  -->
<% if @get_departments.blank? %>
  $('.add_department').qtip({
    content: 'Klik disini untuk menambah department',
    style: ('cls_add_department'),
    position: {
      adjust: { x: -70, y: -30},
      my: 'bottom right',
      at: 'bottom right'
    },
    show: { ready: true }
  });
  setTimeout("$('.add_department').qtip('hide');",2000);
<% end %>
<% if !@get_departments.blank? && @get_departments.size == 1 %>
  $('.department_name').qtip({
    content: 'Klik disini untuk mengedit department',
    style: ('cls_department_name'),
    position: {
      adjust: { x: 20, y: 10},
      my: 'top left',
      at: 'top left'
    },
    show: { ready: true }
  });

  $('.delete_department').qtip({
    content: 'Klik disini untuk menghapus department',
    style: ('cls_delete_department'),
    position: {
      adjust: { x: 70, y: 20},
      my: 'top left',
      at: 'top left'
    },
    show: { ready: true }
  });

  setTimeout("$('.department_name').qtip('hide');",2000);
  setTimeout("$('.delete_department').qtip('hide');",2000);
<% end %>

