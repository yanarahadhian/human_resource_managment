<%= render :partial => "absences/popup_pages/popup_no_logout" %>

<script type="text/javascript" >

  var oTable;
  var gaiSelected = new Array();
  var displayStart = 0;
  var dataLength = 0;

  $(document).ready(function() {
    $('#filter_division').attr('disabled', 'disabled');
    resetInput();
    $("#date_pick").datepicker({
      altField: '#temp_date',
      buttonImageOnly: true,
      dateFormat: 'yy-mm-dd',
      maxDate: '+0',
      onSelect: function(dateText, inst) {
        if ($('#filter_button').is(":hidden")){
          $('#filter_button').click();
        }
      }
    });

    $("#date_pick2").datepicker({
      altField: '#temp_date2',
      dateFormat: 'yy-mm-dd',
      buttonImageOnly: true,
      maxDate: '+0'
    });
    $('#date_pick').datepicker("setDate",<%="#{Date.today.strftime("%d/%m/%Y")}"%>);
    $('#date_pick2').datepicker("setDate",<%="#{Date.today.strftime("%d/%m/%Y")}"%>);
    $('#popup_no_logout #info_section_save_basic').die();

    $('#popup_no_logout #info_section_save_basic').live('click', function(e) {
      e.preventDefault();
      if (gaiSelected.length >= 1){
        if ( confirm("Anda yakin akan mengubah absen karyawan ini?") ){
          $("#ajax-load").show();
          var date  = $("#presence_date").val().split('/');
          var newDate = date[2]+"-"+date[1]+"-"+date[0];
          // var end_time = $("#presence_date").val()+" "+$("#end_working_hour").val()+":"+$("#end_working_minute").val();
          var end_time = newDate+" "+$("#end_working_hour").val()+":"+$("#end_working_minute").val();
          $.ajax({
            url: '/absences/no_logout_action',
            type: 'post',
            dataType: 'script',
            data: { '_method': 'post',"presence_ids[]":gaiSelected, "end_work": end_time,
              "same_all":$("#same").is(':checked') },
            success: function(data) {
              $("#ajax-load").hide();
              // the item has been deleted
              // might want to remove it from the interface
              // or redirect or reload by setting window.location
              gaiSelected = jQuery.grep(gaiSelected, function(value) {
                return value != gaiSelected[0];
              } );
              if (gaiSelected.length > 0 && !$("#same").attr('checked')){
                $('#add_logout_time').click();
              }
              else{
                javascript:$.colorbox.close();
                showFlashMessage(data);
                //window.location='#late';
              }
            }
          });
        }
      }
      return false;
    } );

    oTable = $('#no_logouts_table').dataTable( {
      "aoColumnDefs": [ { "bSortable": false, "aTargets": [ 0, 6, 7, 8 ] },
        { "sClass": "right-text", "aTargets": [ 4, 5, 6, 7 ] },
        { "sClass": "center-text", "aTargets": [ 0 ] }
      ],
      "bFilter": false,
      "bLengthChange": false,
      "bInfo":false,
      "bProcessing": false,
      "bServerSide": true,
      "iDisplayLength": 25,
      "fnDrawCallback": function(){
        gaiSelected=[];
        $('.dataTables_empty').parent().addClass('no-data');
      },
      "fnRowCallback": function( nRow, aData, iDisplayIndex ) {
        /* Add Total Work Hour*/
        if ( aData[8] != "-" ){
          $(nRow).css({ background:"pink" });
        }
        return nRow;
      },
      "sAjaxSource":  "/absences/no_logout_table",
      "oLanguage": {
        "sZeroRecords": "<div class='description center-text'>Data tidak ditemukan!</div>"
      },
      "fnServerData": function ( sSource, aoData, fnCallback ) {
        /* Add some extra data to the sender */

        aoData.push( { "name": "date_start", "value": $('#date_pick').val() } );
        aoData.push( { "name": "date_end", "value": $('#date_pick2').val() } );
        aoData.push( { "name": "name", "value": $('#filter_name').val() } );
        aoData.push( { "name": "department", "value": $('#filter_department').val() } );
        aoData.push( { "name": "division", "value": $('#filter_division').val() } );
        //          aoData.push( { "name": "min", "value": $('#pers_min').val() } );
        //          aoData.push( { "name": "max", "value": $('#pers_max').val() } );
        fnSetKey(aoData, "iDisplayStart", displayStart );
        dataLength = fnGetKey(aoData, "iDisplayLength");
        $.getJSON( sSource, aoData, function (json) {
          if (json.iTotalDisplayRecords > 0){
            $( '.paginationResult' ).html( parseInt(displayStart) + 1 +" - "+ (parseInt(json.iTotalDisplayRecords) + parseInt(displayStart)) +" dari <span id='total'>"+ json.iTotalRecords +"</span>");
            $("#id_more_action").show();$("#id_export").show();
          }
          else{
            $( '.paginationResult' ).html("&nbsp;");
            $("#id_more_action").hide();$("#id_export").hide();
          }
          if (json.iTotalRecords < dataLength ){
            $( '.pagination .icons' ).hide();
          } else{
            $( '.pagination .icons' ).show();
          }
          if (json.iDataExist > 0){
            $('#id_filter').show();$('#filter_block').show();
          }
          else{
            $('#id_filter').hide();$('#filter_block').hide();
          }
          fnCallback(json);
          stop_filter();
        });
      }
    } );

    $('#no_logouts_table thead tr th input').live('click', function () {
      if ($(this).is(":checked")) {
        $('#no_logouts_table tbody tr td input').each(function (){
          if ( !$(this).is(":disabled") ){
            $(this).attr( 'checked', true );
          }
        });
      }
      else{
        $('#no_logouts_table tbody tr td input').each(function (){
          $(this).attr( 'checked', false );
        });
      }
    } );

    $('#remove_date_filter').click(function (e) {
      e.preventDefault();
      displayStart=0;
      $(this).hide();
      $('#date_start').show();
      if ($('#filter_select').val() == '2'){
        $('#antara').show();
        $('#date_end').show();
        $('#date_pick2').datepicker("setDate",<%="#{Date.today.strftime("%d/%m/%Y")}"%>);
      }
      $('#date_pick').datepicker("setDate",<%="#{Date.today.strftime("%d/%m/%Y")}"%>);
      $('.result_filter').hide();
      $('#filter_button').show();
      oTable.fnDraw();
    });

    $('#link_opt_1').click(function (e){
      e.preventDefault();
      $('#filter_opt_1').show();
      $('#filter_button').show();
    });

    $('#link_opt_2').click(function (e){
      e.preventDefault();
      $('#filter_opt_2').show();
      $('#filter_button').show();
    });

    $('#link_opt_3').click(function (e){
      e.preventDefault();
      $('#filter_opt_3').show();
      $('#filter_button').show();
    });

    $('#filter_department').change(function() {
      if($(this).val()==""){$('#filter_division').attr('disabled', 'disabled');}else{$('#filter_division').removeAttr('disabled');}
      $.get("/absences/divisions_by_department", {id: $(this).val()}, null, "script");
    });

    $('.remove_filter').click( function (e) {
      e.preventDefault();
      $(this).parent().hide();
      $.get("/absences/divisions_by_department", null, null, "script");
      $('#filter_division').attr('disabled', 'disabled');
      $('#filter_department').val('');
      $('#filter_division').val('');
      if ($('#filter_opt_1').is(':hidden') && $('#filter_opt_2 ').is(':hidden') && $('#filter_opt_1').is(':hidden')){
        if ($('#month_filter').is(':hidden')){
          $('#filter_button').hide();
        }
      }
      oTable.fnDraw();
    });

    $('#filter_button').click(function (e) {
      progress_filter();
      e.preventDefault();
      displayStart=0;
      if ($('#filter_select').val() == '2'){
        $('.result_filter').html($('#temp_date').val()+" s.d. "+$('#temp_date2').val() );
      }
      if ($('#filter_select').val() == '1'){
        $('#date_pick2').datepicker("setDate", null);
      }
      oTable.fnDraw();
      return false;
    } );

    $('#filter_select').change(function(e){
      e.preventDefault();
      var selectValue = this.options[this.selectedIndex].value;
      if (selectValue == '1'){
        $('#remove_date_filter').click();
        $('#antara').hide();
        $('#date_end').hide();
        $('#date_pick2').datepicker("setDate", null);
      }
      if (selectValue == '2'){
        $('#remove_date_filter').click();
        $('#antara').show();
        $('#date_end').show();
        $('#date_pick2').datepicker("setDate",<%="#{Date.today.strftime("%d/%m/%Y")}"%>);
      }
    } );

    $('#next_page').click(function(e){
      e.preventDefault();
      if (displayStart + dataLength < $('#total').text()){
        displayStart = displayStart + dataLength;
        oTable.fnDraw();
      }
      return false;
    } );

    $('#last_page').click(function(e){
      e.preventDefault();
      if (displayStart + dataLength < $('#total').text()){
        displayStart = (Math.floor((parseInt($('#total').text()-1)/dataLength))*dataLength);
        oTable.fnDraw();
      }
      return false;
    } );

    $('#prev_page').click(function(e){
      e.preventDefault();
      if (displayStart > 0){
        displayStart = displayStart - dataLength;
        oTable.fnDraw();
      }
      return false;
    } );

    $('#first_page').click(function(e){
      e.preventDefault();
      if (displayStart > 0){
        displayStart = 0;
        oTable.fnDraw();
      }
      return false;
    } );

    $("#add_logout_time").click(function () {
      if (gaiSelected.length == 0){
        $('#no_logouts_table tbody tr td input').each(function(e){
          if ($(this).is(":checked")) {
            gaiSelected[gaiSelected.length++] = $(this).val();
          }
        });
      }
      if (gaiSelected.length > 0){
        $.ajax({
          url: '/absences/no_logout_popup',
          dataType: 'script',
          data: { "presence_ids[]":gaiSelected },
          success: function(data) {
            $("#popup_no_logout").html($('#popup_no_logout', data).html() );
            $.fn.colorbox.load();
          }
        });
        $("#add_logout_time").colorbox({width:"600",height:"auto", inline:true, href:"#popup_no_logout",
          onComplete: function(){
            $(this).colorbox.resize();
          },
          onClosed: function(){
            oTable.fnDraw();
            $("#add_logout_time").removeClass('cboxElement').removeData('colorbox');
          }
        });
      }
    } );

  });

  function resetInput(){
    $('.expand_filter input').val('');
    $('#filter_select').val('1');
    displayStart = 0;
  }

  function progress_filter(){
    $("#ajax-load1").show();
    $('#filter_button').hide();
  }

  function stop_filter(){
    $("#ajax-load1").hide();
    $('#filter_button').show();
  }

</script>

