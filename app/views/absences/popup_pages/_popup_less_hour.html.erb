<!-- popup -->
<div style="display:none;">
  <div class="frm-popup" id="popup_less_hour">
    <div id="popup2">
      <%- if @presence %>
        <div class="title-page-tambah"><%= "#{@presence[:name].titleize}: #{@title}" %></div>
        <fieldset>
          <span class="input">
            <label style="width:200px;">Jam Kerja Sesuai Jadwal</label>
            <label><%= Presence.hours_to_hour_text(@presence[:standard_work_length].to_i) %></label>
          </span>
          <span class="input">
            <label style="width:200px;">Lama Bekerja</label>
            <label><%= Presence.hours_to_hour_text(@presence[:work_hour].to_i) %></label>
          </span>
          <span class="clear"></span>
          <span class="input">
            <label>Alasan</label>
            <textarea cols="35" rows="3" id="reason"></textarea>
          </span>
          <span class="clear"></span>
          <%- if @presence_ids.length > 1 %>
            <span class="input">
              <label>Anggap sama semua</label>
              <%= check_box_tag "same"%>
            </span>
          <%- end %>
          <%= hidden_field_tag :popup, @popup %>
          <span class="clear"></span>
          <hr>
          <div class="center-text  box-form">
            <input type="reset" id="info_section_cancel_basic" class="grey_button" value="Batal" name="info_section_cancel_basic" onclick="javascript:$.colorbox.close();window.location='#less_hour'">
            <input type="submit" value="Simpan" name="info_section_save_basic" id="info_section_save_basic" class="blue_button">
          </div>
        </fieldset>
      <%- end %>
    </div>
  </div>
</div>
<div class="clear"></div>
<!-- end popup -->

