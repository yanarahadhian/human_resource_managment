<!-- popup -->
<div style="display:none;">
  <div class="frm-popup" id="popup_late">
    <div id="popup2">
      <%- if @presence %>
        <div class="title-page-tambah"><%= @presence.person.full_name.titleize%></div>
        <fieldset>
          <span class="input">
            <label>Tanggal</label> :
            <%= @presence.presence_date.strftime( "%d/%m/%Y" ) %>
          </span>
          <div class="clear"></div>
          <span class="input">
            <label>Total Terlambat</label> :
            <% time = Presence.minutes_to_hour_text(@presence.is_late.to_i) %>
            <%= time %>
            <input ty id="hide_txt_terlambat" type="hidden" value="<%= @presence.is_late.to_i %>">
          </span>
          <span class="clear"></span>
          <span class="input">
            <label>Dianggap Terlambat</label>
            <input id="minutes_late" type="text">Menit
          </span>
          <span class="clear"></span>
          <span class="input">
            <label>Alasan</label>
            <textarea id="late_reason" cols="35" rows="3"></textarea>
          </span>
          <span class="clear"></span>
          <%- if @presence_ids.length > 1 %>
            <span class="input" id="same_all" style="display:none;">
              <label>Anggap sama semua</label>
              <%= check_box_tag "same"%>
            </span>
            <span class="clear"></span>
          <%- end %>
          <hr>
          <div class="center-text  box-form">
            <input type="reset" id="info_section_cancel_basic" class="grey_button" value="Batal" name="info_section_cancel_basic" onclick="javascript:$.colorbox.close();window.location='#late'">
            <input type="submit" value="Simpan" name="info_section_save_basic" id="info_section_save_basic" class="blue_button">
          </div>
        </fieldset>
      <%- end %>
    </div>
  </div>
</div>
<!-- end popup -->

