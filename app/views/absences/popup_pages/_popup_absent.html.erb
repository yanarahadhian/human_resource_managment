<!-- popup -->
<div style="display:none;">
  <div class="frm-popup" id="popup_absent">
    <div id="popup2">
      <%- if @person %>
        <div class="title-page-tambah"><%= @person.full_name.titleize %></div>
        <fieldset>
          <span class="input">
            <label style="width:200px;">Tanggal</label>
            <label><%= l @absent_date %></label>
          </span>
          <span class="clear"></span>
          <%= hidden_field_tag :absent_type, @absent_type %>
          <%- if @absent_type == 0 %>
            <span class="input">
              <label>Dianggap kerja</label>
              <input type="text" id="work_length"/>Jam
            </span>
            <span class="clear"></span>
          <%- end %>
          <span class="input">
            <label>Alasan</label>
            <textarea cols="35" rows="3" id="presence_description"></textarea>
          </span>
          <span class="clear"></span>
          <span class="input">
            <label>Anggap sama semua</label>
            <%= check_box_tag "same"%>
          </span>
          <span class="clear"></span>
          <hr/>
          <div class="center-text  box-form">
            <input type="reset" id="info_section_cancel_basic" class="grey_button" value="Batal" name="info_section_cancel_basic" onclick="javascript:$.colorbox.close();window.location='#absent'"/>
            <input type="submit" value="Simpan" name="info_section_save_basic" id="info_section_save_basic" class="blue_button"/>
          </div>
        </fieldset>
      <%- end %>
    </div>
  </div>
</div>
<div class="clear"></div>
<!-- end popup -->

