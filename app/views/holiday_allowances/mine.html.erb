                <label class="left">Periode</label>
                <span class="left result_filter" style="display:none;"></span>
                <div id="filter-period" style="width:530px;">
                  <% form_remote_tag :url => {:action => "index" }, :method => :get do |form| %>
                    <%= select_month(Date.today, {:field_name => 'start_month'}, {:style=>"width:80px;"}) %>
                    <%= select_year(Date.today, {:field_name => 'start_year'}, {:style=>"width:80px;"}) %>
                    -
                    <%= select_month(Date.today, {:field_name => 'end_month'}, {:style=>"width:80px;"}) %>
                    <%= select_year(Date.today, {:field_name => 'end_year'}, {:style=>"width:80px;"}) %>
                    <span style="display:inline-block;">
                      <%= submit_tag "Go", :class=>"grey_button2" %>
                    </span>
                  <% end %>
                </div>
                <div class="clear"></div>
              </div>
              <div class="clear"></div>

