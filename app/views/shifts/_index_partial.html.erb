<%= render :partial=> "layouts/shared/breadcrumbs" %>
<%= render :partial => "layouts/howto_menu" %>

<fieldset class="fm-table">
  <legend><a href="#" id="help_dash" class="icons help-top-icon" title="Click to show/hide information">&nbsp;</a>
   Setting Shift</legend>
  <%= render :partial => "layouts/howto/howto_content"%>
  <%= render :partial => "layouts/delete_message" %>
  <div class="clear"></div>
  <div class="panelFilter">
    <table cellpadding="0" cellspacing="0" class="tablesorter">
      <tbody><tr>
          <% if current_features.include?('shift_new') %>
            <%unless @shift.blank?%>
              <td>
                <div id="action_menu">
                  <ul>
                    <li>
                      <a href="" class="grey_button2 delete_shift">
                        <span class="left">More Actions</span>
                        <span class="icons drop_arrow_ico">&nbsp;</span>
                      </a>
                      <div class="clear"></div>
                      <ul>
                        <li>
                          <a class="list" onclick="onDeleteShifts()">Delete</a>
                        </li>
                      </ul>
                    </li>
                  </ul>
                </div>
              </td>
            <% end %>
            <td width="240">
              <div class="pagination">
                <%= link_to ' <span class="icons add_ico">&nbsp;</span>
  Tambah Shift', "#shift/new" , :class=> 'grey_button2 add_shift'%>
              </div>
              <div class="clear"></div>
            </td>
          <% end %>
        </tr>
      </tbody></table>
  </div>
  <div class="clear"></div>
  <div id="div_list_shifts">
    <%= render :partial => "list_shifts" %>
  </div>
</fieldset>

<script type="text/javascript">
  $(document).ready(function(){
     error_handle("<%= flash.now[:notice] %>");
  })
</script>
